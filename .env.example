APP_NAME=Meteora
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CO

LOG_CHANNEL=stderr
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=weather_chat
DB_USERNAME=laravel
DB_PASSWORD=laravel

CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

FILESYSTEM_DISK=local

# --- OpenAI Info, Importante al momento de ejecutar cambiar al API KEY correspondiente ---
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5-nano
OPENAI_TIMEOUT=30
OPENAI_RETRIES=2
OPENAI_RETRY_SLEEP=800
OPENAI_MOCK=false

OPEN_METEO_BASE=https://api.open-meteo.com/v1
OPEN_METEO_TTL_MINUTES=10

# --- Frontend ---
VITE_APP_NAME="${APP_NAME}"
